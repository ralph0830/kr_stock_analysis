# docker/compose/.env.prod.template
# Ralph Stock - 운영 환경용 환경 변수 템플릿
# 실제 배포 시 복사하여 값을 채우세요

# ===========================================================================
# Database Configuration
# ===========================================================================
POSTGRES_DB=ralph_stock
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_PRODUCTION_PASSWORD
POSTGRES_PORT=5432

# ===========================================================================
# Redis Configuration
# ===========================================================================
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_PORT=6379

# ===========================================================================
# Service Ports
# ===========================================================================
API_GATEWAY_PORT=5111
VCP_SCANNER_PORT=5112
SIGNAL_ENGINE_PORT=5113
CHATBOT_PORT=5114
FRONTEND_PORT=5110
FLOWER_PORT=5555

# ===========================================================================
# Service URLs (Internal Docker Network)
# ===========================================================================
VCP_SCANNER_URL=http://vcp-scanner:5112
SIGNAL_ENGINE_URL=http://signal-engine:5113
CHATBOT_SERVICE_URL=http://chatbot:5114

# ===========================================================================
# Kiwoom REST API (운영용)
# ===========================================================================
USE_KIWOOM_REST=true
KIWOOM_APP_KEY=CHANGE_THIS_KIWOOM_APP_KEY
KIWOOM_SECRET_KEY=CHANGE_THIS_KIWOOM_SECRET_KEY
KIWOOM_BASE_URL=https://api.kiwoom.com
KIWOOM_WS_URL=wss://api.kiwoom.com:10000/api/dostk/websocket

# ===========================================================================
# Gemini API (운영용)
# ===========================================================================
GEMINI_API_KEY=CHANGE_THIS_GEMINI_API_KEY

# ===========================================================================
# Frontend Configuration (운영용)
# ===========================================================================
# 외부 도메인으로 변경하세요
PUBLIC_API_URL=https://your-domain.com
PUBLIC_WS_URL=wss://your-domain.com
NEXT_PUBLIC_API_URL=https://your-domain.com
NEXT_PUBLIC_WS_URL=wss://your-domain.com

# ===========================================================================
# Monitoring (운영용)
# ===========================================================================
FLOWER_USER=CHANGE_THIS_FLOWER_USER
FLOWER_PASSWORD=CHANGE_THIS_FLOWER_PASSWORD

# ===========================================================================
# Logging (운영용)
# ===========================================================================
LOG_LEVEL=INFO
NODE_ENV=production

# ===========================================================================
# Celery Configuration
# ===========================================================================
CELERY_WORKER_PREFETCH_MULTIPLIER=4
CELERY_WORKER_MAX_TASKS_PER_CHILD=1000
