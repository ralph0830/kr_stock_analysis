# docker/compose/.env.dev
# Ralph Stock - 개발 환경용 환경 변수
# 로컬 개발 시 사용하는 기본값

# ===========================================================================
# Database Configuration
# ===========================================================================
POSTGRES_DB=ralph_stock
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5433

# ===========================================================================
# Redis Configuration
# ===========================================================================
REDIS_PORT=6380

# ===========================================================================
# Service Ports
# ===========================================================================
API_GATEWAY_PORT=5111
VCP_SCANNER_PORT=5112
SIGNAL_ENGINE_PORT=5113
CHATBOT_PORT=5114
FRONTEND_PORT=5110
FLOWER_PORT=5555

# ===========================================================================
# Service URLs (Internal Docker Network)
# ===========================================================================
VCP_SCANNER_URL=http://vcp-scanner:5112
SIGNAL_ENGINE_URL=http://signal-engine:5113
CHATBOT_SERVICE_URL=http://chatbot:5114

# ===========================================================================
# Kiwoom REST API (개발용 - 설정 필요 시)
# ===========================================================================
USE_KIWOOM_REST=false
# KIWOOM_APP_KEY=your_app_key_here
# KIWOOM_SECRET_KEY=your_secret_key_here

# ===========================================================================
# Gemini API (선택사항)
# ===========================================================================
# GEMINI_API_KEY=your_gemini_api_key_here

# ===========================================================================
# Frontend Configuration
# ===========================================================================
NEXT_PUBLIC_API_URL=http://localhost:5111
NEXT_PUBLIC_WS_URL=ws://localhost:5111

# ===========================================================================
# Monitoring
# ===========================================================================
FLOWER_USER=admin
FLOWER_PASSWORD=admin

# ===========================================================================
# Logging
# ===========================================================================
LOG_LEVEL=DEBUG
NODE_ENV=development
