# docker/compose/.env.example
# Ralph Stock - Docker Compose 환경 변수 예시
# 복사하여 .env 파일 생성 후 값을 설정하세요

# ===========================================================================
# Database Configuration
# ===========================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/ralph_stock
POSTGRES_DB=ralph_stock
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# ===========================================================================
# Redis Configuration
# ===========================================================================
REDIS_URL=redis://localhost:6380/0
CELERY_BROKER_URL=redis://localhost:6380/0
CELERY_RESULT_BACKEND=redis://localhost:6380/2

# ===========================================================================
# Service URLs (Internal Docker Network)
# ===========================================================================
VCP_SCANNER_URL=http://vcp-scanner:5112
SIGNAL_ENGINE_URL=http://signal-engine:5113
CHATBOT_SERVICE_URL=http://chatbot:5114
MARKET_ANALYZER_URL=http://market-analyzer:8000

# ===========================================================================
# Kiwoom REST API Configuration
# ===========================================================================
KIWOOM_APP_KEY=your_app_key_here
KIWOOM_SECRET_KEY=your_secret_key_here
KIWOOM_BASE_URL=https://api.kiwoom.com
KIWOOM_WS_URL=wss://api.kiwoom.com:10000/api/dostk/websocket
USE_KIWOOM_REST=false

# ===========================================================================
# Gemini API Configuration
# ===========================================================================
GEMINI_API_KEY=your_gemini_api_key_here

# ===========================================================================
# Frontend Configuration
# ===========================================================================
NEXT_PUBLIC_API_URL=http://localhost:5111
NEXT_PUBLIC_WS_URL=ws://localhost:5111

# ===========================================================================
# Monitoring & Observability
# ===========================================================================
FLOWER_USER=admin
FLOWER_PASSWORD=changeme

# ===========================================================================
# Production Only
# ===========================================================================
LOG_LEVEL=INFO
NODE_ENV=production
NEXT_PUBLIC_API_URL=
NEXT_PUBLIC_WS_URL=
